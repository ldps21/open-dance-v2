---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import Note from '~/components/widgets/Note.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata} isEnglish>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Dance with the Best"
    title="Exceptional dance packages for every passion!"
    subtitle="Find the perfect plan to elevate your dance journey."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our monthly plans"
    subtitle="Pay only for what you need"
    prices={[
      {
        title: '1 class per week',
        subtitle: 'in the same dance style',
        price: 30,
        period: '4 hours of classes per month',
      },
      {
        title: '2 classes per week',
        subtitle: 'in the same dance style',
        price: 40,
        period: '8 hours of classes per month',
      },
      {
        title: '4 classes per week',
        subtitle: '2 different dance styles',
        price: 70,
        period: '16 hours of classes per month',
      },
      {
        title: 'Special promotion',
        subtitle: '3 different dance styles',
        price: 120,
        period: '24 hours of classes per month',
        hasRibbon: true,
        ribbonTitle: 'popular',
        items: [{ description: '1-hour private lesson included for free' }, { description: '6 classes per week' }],
      },
    ]}
  />

  <Note title="Note:" content="Drop-in dance classes are available at a rate of â‚¬10 per class." />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact us here!',
        href: '/en/contact',
      },
    ]}
    title="Are you looking for private dance lessons?"
    subtitle="We are delighted to offer the best private lessons tailored to your needs. Please reach out to us for more information!"
  />

  <FAQs
    title="Pricing FAQs"
    subtitle="We're here to answer your questions about our dance school pricing. If you have queries, you're in the right place."
    columns={1}
    items={[
      {
        title: 'Can I switch dance styles mid-month?',
        description:
          'Our monthly plans are designed to focus on one dance style per month, with the exception of our full access plan. We kindly ask that students stick with their chosen style for the duration of the month.',
      },
      {
        title: 'Can I get a refund if I stop attending classes mid-month?',
        description:
          "Unfortunately, we don't offer refunds once the payment for the month has been made, regardless of attendance.",
      },
      {
        title: 'Do I have to pay full price if I only attend half the classes?',
        description:
          'Yes, the monthly plan requires full payment, even if you attend only part of the classes. If you plan to attend fewer classes, we recommend paying for individual classes instead.',
      },
    ]}
  />
</Layout>
