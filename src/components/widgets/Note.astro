---
import { Icon } from 'astro-icon/components';

const { icon = 'tabler:info-square', title = 'Philosophy:', content = 'Discover the Passion of Dance' } = Astro.props;
---

<section class="bg-blue-50 dark:bg-slate-800 not-prose">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-4 text-md text-center font-medium">
    <span class="font-bold"> <Icon name={icon} class="w-5 h-5 inline-block align-text-bottom" /> {title}</span>
    {content}
  </div>
</section>
